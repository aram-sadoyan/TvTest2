<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/primary_color_white">


	<GridLayout
		android:id="@+id/brandGridLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="45dp"
		android:columnCount="6"
		android:layout_marginTop="78dp"
		app:layout_constraintBottom_toTopOf="@+id/brandSelectTxtView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

<!--	<androidx.recyclerview.widget.RecyclerView-->
<!--		android:id="@+id/brandRecyclerView"-->
<!--		android:layout_width="wrap_content"-->
<!--		android:layout_height="wrap_content"-->
<!--		android:layout_marginTop="140dp"-->
<!--		app:layout_constraintBottom_toTopOf="@+id/brandSelectTxtView"-->
<!--		app:layout_constraintEnd_toEndOf="parent"-->
<!--		app:layout_constraintStart_toStartOf="parent"-->
<!--		app:layout_constraintTop_toTopOf="parent" />-->


	<TextView
		android:id="@+id/brandSelectTxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/primary_color_orange"
		android:layout_marginBottom="237dp"
		android:layout_marginEnd="20dp"
		android:textStyle="bold"
		android:typeface="sans"
		android:textSize="18sp"
		android:text="Select this brand"
		app:layout_constraintEnd_toStartOf="@id/rightArrowView"
		app:layout_constraintBottom_toBottomOf="parent"

		/>

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/rightArrowView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:paddingTop="20dp"
		android:layout_marginBottom="226dp"
		android:layout_marginEnd="90dp"
		android:background="@drawable/ic_arrow_right"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>