	<TextView
		android:id="@+id/titleVxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="PICK ONE"
		android:textStyle="bold"
		android:textSize="44sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/tabLayout" />


	<com.airbnb.lottie.LottieAnimationView
		android:layout_width="100dp"
		android:layout_height="200dp"
		android:id="@+id/icArrowDown"

		app:lottie_fileName="arrow.json"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/titleVxtView"
		tools:visibility="gone"/>


	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/app_logo"
		android:background="@drawable/ic_watch_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="90dp"
		android:layout_marginTop="80dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>


	<com.google.android.material.tabs.TabLayout
		android:id="@+id/tabLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minHeight="?actionBarSize"
		android:background="@color/primary_color_white"
		android:layout_marginTop="90dp"
		android:clipToPadding="false"
		app:tabTextAppearance="@style/MineCustomTabText"
		app:tabSelectedTextColor="@android:color/black"
		app:tabTextColor="@android:color/darker_gray"
		android:layout_marginBottom="90dp"
		app:tabIndicatorHeight="2dp"
		app:tabIndicatorColor="@color/primary_color_orange"

		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent">

	</com.google.android.material.tabs.TabLayout>

	<com.union.travel.tvtest2.CustomViewPager
		android:id="@+id/viewPager"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tabLayout"
		app:layout_constraintBottom_toBottomOf="parent">


	</com.union.travel.tvtest2.CustomViewPager>




	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:text="   online txt"
		android:textSize="12sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />


	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:text="       online"
		android:textSize="12sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/textView" />




</androidx.constraintlayout.widget.ConstraintLayout>