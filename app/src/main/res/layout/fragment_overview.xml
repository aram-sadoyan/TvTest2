<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary_color_white">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/watchesRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/arrow_down"
        android:background="@drawable/ic_arrow_down"
        android:layout_marginTop="40dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/watchesRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/watchesRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/watchesRecyclerView"/>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/watchId"
        android:layout_width="590px"
        android:layout_height="590px"
        android:layout_marginStart="65dp"
        android:layout_marginTop="97dp"
        android:background="@color/primary_color_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/watchesRecyclerView" />

    <TextView
        android:id="@+id/titleTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginStart="65dp"
        android:includeFontPadding="false"
        android:textSize="18sp"

        app:layout_constraintStart_toEndOf="@id/watchId"
        android:text="Sports and Fitness"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"

        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@id/watchId"
        android:layout_marginStart="65dp"

        app:layout_constraintTop_toBottomOf="@+id/titleTxtView"
        android:text="fenix - Pro and Safir" />

    <TextView
        android:id="@+id/colorDescTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="65dp"
        android:includeFontPadding="false"
        android:textSize="18sp"

        app:layout_constraintStart_toEndOf="@id/watchId"
        app:layout_constraintTop_toBottomOf="@+id/nameTxtView"
        android:text="Saphier - Titanium with" />

    <TextView
        android:id="@+id/serialTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="65dp"
        android:includeFontPadding="false"
        android:textSize="18sp"

        app:layout_constraintStart_toEndOf="@id/watchId"
        app:layout_constraintTop_toBottomOf="@+id/colorDescTxtView"
        android:text="Part Number 01038347" />


    <View
        android:id="@+id/lineView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/primary_color_orange"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/watchId"
        app:layout_constraintBottom_toTopOf="@id/priceTxtView"/>

    <TextView
        android:id="@+id/priceTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="90dp"
        android:includeFontPadding="false"
        android:text="899.99 USD"
        android:textColor="@android:color/black"
        android:textSize="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>