<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/primary_color_white">


	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/watchesRecyclerView"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="95dp"
		android:layout_marginTop="97dp"
		android:layout_marginBottom="210dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/arrowDownView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:background="@drawable/ic_arrow_down"
		android:paddingStart="20dp"
		android:paddingEnd="20dp"
		app:layout_constraintEnd_toEndOf="@id/watchesRecyclerView"
		app:layout_constraintStart_toStartOf="@id/watchesRecyclerView"
		app:layout_constraintTop_toBottomOf="@id/watchesRecyclerView" />


	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/watchId"
		android:layout_width="590dp"
		android:layout_height="590dp"
		android:layout_marginStart="65dp"
		android:layout_marginTop="97dp"
		android:background="@color/primary_color_orange"
		app:layout_constraintStart_toEndOf="@id/watchesRecyclerView"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/titleTxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="65dp"
		android:layout_marginTop="32dp"
		android:includeFontPadding="false"
		android:text="Sports and Fitness"
		android:textColor="@android:color/black"

		android:textSize="18sp"
		app:layout_constraintStart_toEndOf="@id/watchId"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/nameTxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="65dp"
		android:layout_marginTop="8dp"
		android:includeFontPadding="false"

		android:text="fenix - Pro and Safir"
		android:textColor="@android:color/black"
		android:textSize="48sp"

		app:layout_constraintStart_toEndOf="@id/watchId"
		app:layout_constraintTop_toBottomOf="@+id/titleTxtView" />

	<TextView
		android:id="@+id/colorDescTxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="65dp"
		android:includeFontPadding="false"
		android:text="Saphier - Titanium with"
		android:textColor="@android:color/black"

		android:textSize="18sp"
		app:layout_constraintStart_toEndOf="@id/watchId"
		app:layout_constraintTop_toBottomOf="@+id/nameTxtView" />

	<TextView
		android:id="@+id/serialTxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="65dp"
		android:layout_marginTop="6dp"
		android:includeFontPadding="false"
		android:text="Part Number 01038347"
		android:textColor="@android:color/black"
		android:textSize="18sp"
		app:layout_constraintStart_toEndOf="@id/watchId"
		app:layout_constraintTop_toBottomOf="@+id/colorDescTxtView" />


	<TextView
		android:id="@+id/caseSizeTxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="65dp"
		android:layout_marginTop="88dp"
		android:includeFontPadding="false"
		android:text="Case Size"
		android:textColor="@android:color/black"
		android:textSize="18sp"
		app:layout_constraintStart_toEndOf="@id/watchId"
		app:layout_constraintTop_toBottomOf="@+id/serialTxtView" />

	<TextView
		android:id="@+id/moreDetailsSize"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="90dp"
		android:includeFontPadding="false"
		android:text="more details"
		android:textColor="@color/primary_color_orange"
		android:textSize="18sp"
		app:layout_constraintStart_toEndOf="@id/caseSizeTxtView"
		app:layout_constraintTop_toBottomOf="@+id/serialTxtView" />


	<RadioGroup
		android:id="@+id/size_radioGroup"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="65dp"
		android:layout_marginTop="5dp"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/watchId"
		app:layout_constraintTop_toBottomOf="@id/caseSizeTxtView">


		<RadioButton
			android:id="@+id/radio0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/radio_flat_selector"
			android:button="@android:color/transparent"
			android:checked="true"
			android:gravity="center"

			android:text="Daily"
			android:textColor="@drawable/radio_flat_text_selector" />

		<RadioButton
			android:id="@+id/radio1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:background="@drawable/radio_flat_selector"
			android:button="@android:color/transparent"
			android:gravity="center"
			android:text="Weekly"
			android:textColor="@drawable/radio_flat_text_selector" />

		<RadioButton
			android:id="@+id/radio3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"

			android:button="@android:color/transparent"
			android:gravity="center"

			android:text="Weekly"
			android:textColor="@drawable/radio_flat_text_selector" />

	</RadioGroup>


	<TextView
		android:id="@+id/selectForComapirTxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="90dp"
		android:layout_marginBottom="32dp"
		android:text="Add to compare"
		android:textColor="@color/primary_color_orange"
		android:textSize="18sp"
		app:layout_constraintBottom_toTopOf="@id/lineView"
		app:layout_constraintEnd_toEndOf="parent" />

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/icPlus"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="6dp"
		android:layout_marginBottom="23dp"
		android:background="@drawable/ic_plus"
		app:layout_constraintBottom_toTopOf="@id/lineView"
		app:layout_constraintEnd_toStartOf="@id/selectForComapirTxtView" />


	<View
		android:id="@+id/lineView"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:layout_marginStart="65dp"
		android:layout_marginEnd="90dp"
		android:layout_marginBottom="20dp"
		android:background="@color/primary_color_orange"
		app:layout_constraintBottom_toTopOf="@id/priceTxtView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/watchId" />

	<TextView
		android:id="@+id/priceTxtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="90dp"
		android:layout_marginBottom="69dp"
		android:includeFontPadding="false"
		android:text="899.99 USD"
		android:textColor="@android:color/black"
		android:textSize="64dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>